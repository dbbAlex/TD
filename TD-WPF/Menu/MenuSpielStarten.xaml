<UserControl x:Class="TD_WPF.MenuEinstellungen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TD_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1024">
    <UserControl.Background>
        <ImageBrush ImageSource="/Grafik/grass.jpg"/>
    </UserControl.Background>
    <StackPanel Orientation="Vertical">
        <Label Content="Spiel starten" FontFamily="Bauhaus 93" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="100" Margin="0, 10, 0, 10"/>
        <local:CornerButton x:Name="btnNeuesSpiel" Content="Neues Spiel" FontSize="50" HorizontalAlignment="Center" Background="Transparent" BorderBrush="OrangeRed" Margin="0,0,0,35" FontFamily="Bauhaus 93" CornerRadius="10" Style="{StaticResource RoundButton}" Padding="5,0,5,0"/>
        <local:CornerButton x:Name="btnKarteWaehlen" Content="Karte wählen" FontSize="50" HorizontalAlignment="Center" Background="Transparent" BorderBrush="OrangeRed" Margin="0,0,0,35" FontFamily="Bauhaus 93" CornerRadius="10" Style="{StaticResource RoundButton}" Padding="5,0,5,0"/>
    </StackPanel>
</UserControl>
